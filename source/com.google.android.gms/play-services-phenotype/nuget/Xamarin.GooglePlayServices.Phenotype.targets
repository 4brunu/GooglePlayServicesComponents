<?xml version="1.0" encoding="UTF-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <!-- Unique key for cached download -->
        <_XbdKey_playservicesphenotype>playservices-15.0.1/playservicesphenotype</_XbdKey_playservicesphenotype>
        
        <!-- Path to .aar file within the extracted contents of the cached download -->
        <_XbdAarFile_playservicesphenotype>m2repository\com\google\android\gms\play-services-phenotype\15.0.1\play-services-phenotype-15.0.1.aar</_XbdAarFile_playservicesphenotype>
        
        <!-- Full path to .aar file, assuming we had to download to the cache - we reset this later if it is in the sdk -->
        <_XbdAarFileFullPath_playservicesphenotype>$(XamarinBuildDownloadDir)$(_XbdKey_playservicesphenotype)\play-services-phenotype-15.0.1.aar</_XbdAarFileFullPath_playservicesphenotype>

        <!-- Assembly name to embed .aar in -->
        <_XbdAssemblyName_playservicesphenotype>Xamarin.GooglePlayServices.Phenotype</_XbdAssemblyName_playservicesphenotype>
    </PropertyGroup>

    <ItemGroup>
        <XamarinBuildRestoreResources Include="_XbdRestoreItems_playservicesphenotype"/>
    </ItemGroup>

    <Target Name="_XbdRestoreItems_playservicesphenotype">
        <!-- Check if the aar file is in the android sdk already and change the path to use to it, if it's found -->
        <CreateProperty Value="$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_playservicesphenotype)" Condition="Exists('$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_playservicesphenotype)')">
            <Output PropertyName="_XbdAarFileFullPath_playservicesphenotype" TaskParameter="Value" />
        </CreateProperty>

        <ItemGroup>
            <XamarinBuildDownload Include="$(_XbdKey_playservicesphenotype)">
                <Url>https://dl.google.com/dl/android/maven2/com/google/android/gms/play-services-phenotype/15.0.1/play-services-phenotype-15.0.1.aar</Url>
                <ToFile>play-services-phenotype-15.0.1.aar</ToFile>
                <Kind>Uncompressed</Kind>
                <Md5>dbb88570add5463d9468bf3ce49dae73</Md5>
            </XamarinBuildDownload>
        </ItemGroup>

        <ItemGroup>
            <XamarinBuildDownloadRestoreAssemblyAar Include="$(_XbdAarFileFullPath_playservicesphenotype)">
                <LogicalName>__AndroidLibraryProjects__.zip</LogicalName>
                <AssemblyName>$(_XbdAssemblyName_playservicesphenotype)</AssemblyName>
            </XamarinBuildDownloadRestoreAssemblyAar>
        </ItemGroup>
    </Target>
</Project>