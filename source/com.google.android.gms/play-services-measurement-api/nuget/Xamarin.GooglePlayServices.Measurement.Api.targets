<?xml version="1.0" encoding="UTF-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <!-- Unique key for cached download -->
        <_XbdKey_playservicesmeasurementapi>playservices-16.0.0/playservicesmeasurementapi</_XbdKey_playservicesmeasurementapi>
        
        <!-- Path to .aar file within the extracted contents of the cached download -->
        <_XbdAarFile_playservicesmeasurementapi>m2repository\com\google\android\gms\play-services-measurement-api\16.0.0\play-services-measurement-api-16.0.0.aar</_XbdAarFile_playservicesmeasurementapi>
        
        <!-- Full path to .aar file, assuming we had to download to the cache - we reset this later if it is in the sdk -->
        <_XbdAarFileFullPath_playservicesmeasurementapi>$(XamarinBuildDownloadDir)$(_XbdKey_playservicesmeasurementapi)\play-services-measurement-api-16.0.0.aar</_XbdAarFileFullPath_playservicesmeasurementapi>

        <!-- Assembly name to embed .aar in -->
        <_XbdAssemblyName_playservicesmeasurementapi>Xamarin.GooglePlayServices.Measurement.Api</_XbdAssemblyName_playservicesmeasurementapi>
    </PropertyGroup>

    <ItemGroup>
        <XamarinBuildRestoreResources Include="_XbdRestoreItems_playservicesmeasurementapi"/>
    </ItemGroup>

    <Target Name="_XbdRestoreItems_playservicesmeasurementapi">
        <!-- Check if the aar file is in the android sdk already and change the path to use to it, if it's found -->
        <CreateProperty Value="$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_playservicesmeasurementapi)" Condition="Exists('$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_playservicesmeasurementapi)')">
            <Output PropertyName="_XbdAarFileFullPath_playservicesmeasurementapi" TaskParameter="Value" />
        </CreateProperty>

        <ItemGroup>
            <XamarinBuildDownload Include="$(_XbdKey_playservicesmeasurementapi)">
                <Url>https://dl.google.com/dl/android/maven2/com/google/android/gms/play-services-measurement-api/16.0.0/play-services-measurement-api-16.0.0.aar</Url>
                <ToFile>play-services-measurement-api-16.0.0.aar</ToFile>
                <Kind>Uncompressed</Kind>
                <Md5>ac6c60f597f3c9b2d103cfb14d2410c2</Md5>
            </XamarinBuildDownload>
        </ItemGroup>

        <ItemGroup>
            <XamarinBuildDownloadRestoreAssemblyAar Include="$(_XbdAarFileFullPath_playservicesmeasurementapi)">
                <LogicalName>__AndroidLibraryProjects__.zip</LogicalName>
                <AssemblyName>$(_XbdAssemblyName_playservicesmeasurementapi)</AssemblyName>
            </XamarinBuildDownloadRestoreAssemblyAar>
        </ItemGroup>
    </Target>
</Project>