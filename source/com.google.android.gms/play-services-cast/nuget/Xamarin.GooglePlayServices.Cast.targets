<?xml version="1.0" encoding="UTF-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <!-- Unique key for cached download -->
        <_XbdKey_playservicescast>playservices-15.0.1/playservicescast</_XbdKey_playservicescast>
        
        <!-- Path to .aar file within the extracted contents of the cached download -->
        <_XbdAarFile_playservicescast>m2repository\com\google\android\gms\play-services-cast\15.0.1\play-services-cast-15.0.1.aar</_XbdAarFile_playservicescast>
        
        <!-- Full path to .aar file, assuming we had to download to the cache - we reset this later if it is in the sdk -->
        <_XbdAarFileFullPath_playservicescast>$(XamarinBuildDownloadDir)$(_XbdKey_playservicescast)\play-services-cast-15.0.1.aar</_XbdAarFileFullPath_playservicescast>

        <!-- Assembly name to embed .aar in -->
        <_XbdAssemblyName_playservicescast>Xamarin.GooglePlayServices.Cast</_XbdAssemblyName_playservicescast>
    </PropertyGroup>

    <ItemGroup>
        <XamarinBuildRestoreResources Include="_XbdRestoreItems_playservicescast"/>
    </ItemGroup>

    <Target Name="_XbdRestoreItems_playservicescast">
        <!-- Check if the aar file is in the android sdk already and change the path to use to it, if it's found -->
        <CreateProperty Value="$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_playservicescast)" Condition="Exists('$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_playservicescast)')">
            <Output PropertyName="_XbdAarFileFullPath_playservicescast" TaskParameter="Value" />
        </CreateProperty>

        <ItemGroup>
            <XamarinBuildDownload Include="$(_XbdKey_playservicescast)">
                <Url>https://dl.google.com/dl/android/maven2/com/google/android/gms/play-services-cast/15.0.1/play-services-cast-15.0.1.aar</Url>
                <ToFile>play-services-cast-15.0.1.aar</ToFile>
                <Kind>Uncompressed</Kind>
                <Md5>bb487242e82ec115c2bd42bfd7d72829</Md5>
            </XamarinBuildDownload>
        </ItemGroup>

        <ItemGroup>
            <XamarinBuildDownloadRestoreAssemblyAar Include="$(_XbdAarFileFullPath_playservicescast)">
                <LogicalName>__AndroidLibraryProjects__.zip</LogicalName>
                <AssemblyName>$(_XbdAssemblyName_playservicescast)</AssemblyName>
            </XamarinBuildDownloadRestoreAssemblyAar>
        </ItemGroup>
    </Target>
</Project>