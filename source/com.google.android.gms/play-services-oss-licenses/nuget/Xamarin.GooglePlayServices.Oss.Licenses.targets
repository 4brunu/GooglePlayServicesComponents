<?xml version="1.0" encoding="UTF-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <!-- Unique key for cached download -->
        <_XbdKey_playservicesosslicenses>playservices-15.0.1/playservicesosslicenses</_XbdKey_playservicesosslicenses>
        
        <!-- Path to .aar file within the extracted contents of the cached download -->
        <_XbdAarFile_playservicesosslicenses>m2repository\com\google\android\gms\play-services-oss-licenses\15.0.1\play-services-oss-licenses-15.0.1.aar</_XbdAarFile_playservicesosslicenses>
        
        <!-- Full path to .aar file, assuming we had to download to the cache - we reset this later if it is in the sdk -->
        <_XbdAarFileFullPath_playservicesosslicenses>$(XamarinBuildDownloadDir)$(_XbdKey_playservicesosslicenses)\play-services-oss-licenses-15.0.1.aar</_XbdAarFileFullPath_playservicesosslicenses>

        <!-- Assembly name to embed .aar in -->
        <_XbdAssemblyName_playservicesosslicenses>Xamarin.GooglePlayServices.Oss.Licenses</_XbdAssemblyName_playservicesosslicenses>
    </PropertyGroup>

    <ItemGroup>
        <XamarinBuildRestoreResources Include="_XbdRestoreItems_playservicesosslicenses"/>
    </ItemGroup>

    <Target Name="_XbdRestoreItems_playservicesosslicenses">
        <!-- Check if the aar file is in the android sdk already and change the path to use to it, if it's found -->
        <CreateProperty Value="$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_playservicesosslicenses)" Condition="Exists('$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_playservicesosslicenses)')">
            <Output PropertyName="_XbdAarFileFullPath_playservicesosslicenses" TaskParameter="Value" />
        </CreateProperty>

        <ItemGroup>
            <XamarinBuildDownload Include="$(_XbdKey_playservicesosslicenses)">
                <Url>https://dl.google.com/dl/android/maven2/com/google/android/gms/play-services-oss-licenses/15.0.1/play-services-oss-licenses-15.0.1.aar</Url>
                <ToFile>play-services-oss-licenses-15.0.1.aar</ToFile>
                <Kind>Uncompressed</Kind>
                <Md5>99a13e0fbafdc4d6ed966b0a9bcc9e4f</Md5>
            </XamarinBuildDownload>
        </ItemGroup>

        <ItemGroup>
            <XamarinBuildDownloadRestoreAssemblyAar Include="$(_XbdAarFileFullPath_playservicesosslicenses)">
                <LogicalName>__AndroidLibraryProjects__.zip</LogicalName>
                <AssemblyName>$(_XbdAssemblyName_playservicesosslicenses)</AssemblyName>
            </XamarinBuildDownloadRestoreAssemblyAar>
        </ItemGroup>
    </Target>
</Project>