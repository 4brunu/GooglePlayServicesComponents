<?xml version="1.0" encoding="UTF-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <!-- Unique key for cached download -->
        <_XbdKey_playservicesadsbase>playservices-15.0.1/playservicesadsbase</_XbdKey_playservicesadsbase>
        
        <!-- Path to .aar file within the extracted contents of the cached download -->
        <_XbdAarFile_playservicesadsbase>m2repository\com\google\android\gms\play-services-ads-base\15.0.1\play-services-ads-base-15.0.1.aar</_XbdAarFile_playservicesadsbase>
        
        <!-- Full path to .aar file, assuming we had to download to the cache - we reset this later if it is in the sdk -->
        <_XbdAarFileFullPath_playservicesadsbase>$(XamarinBuildDownloadDir)$(_XbdKey_playservicesadsbase)\play-services-ads-base-15.0.1.aar</_XbdAarFileFullPath_playservicesadsbase>

        <!-- Assembly name to embed .aar in -->
        <_XbdAssemblyName_playservicesadsbase>Xamarin.GooglePlayServices.Ads.Base</_XbdAssemblyName_playservicesadsbase>
    </PropertyGroup>

    <ItemGroup>
        <XamarinBuildRestoreResources Include="_XbdRestoreItems_playservicesadsbase"/>
    </ItemGroup>

    <Target Name="_XbdRestoreItems_playservicesadsbase">
        <!-- Check if the aar file is in the android sdk already and change the path to use to it, if it's found -->
        <CreateProperty Value="$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_playservicesadsbase)" Condition="Exists('$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_playservicesadsbase)')">
            <Output PropertyName="_XbdAarFileFullPath_playservicesadsbase" TaskParameter="Value" />
        </CreateProperty>

        <ItemGroup>
            <XamarinBuildDownload Include="$(_XbdKey_playservicesadsbase)">
                <Url>https://dl.google.com/dl/android/maven2/com/google/android/gms/play-services-ads-base/15.0.1/play-services-ads-base-15.0.1.aar</Url>
                <ToFile>play-services-ads-base-15.0.1.aar</ToFile>
                <Kind>Uncompressed</Kind>
                <Md5>4cc8857599bb81b0533f1fab17ca4774</Md5>
            </XamarinBuildDownload>
        </ItemGroup>

        <ItemGroup>
            <XamarinBuildDownloadRestoreAssemblyAar Include="$(_XbdAarFileFullPath_playservicesadsbase)">
                <LogicalName>__AndroidLibraryProjects__.zip</LogicalName>
                <AssemblyName>$(_XbdAssemblyName_playservicesadsbase)</AssemblyName>
            </XamarinBuildDownloadRestoreAssemblyAar>
        </ItemGroup>
    </Target>
</Project>