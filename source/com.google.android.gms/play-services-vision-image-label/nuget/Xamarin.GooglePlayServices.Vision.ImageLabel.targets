<?xml version="1.0" encoding="UTF-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <!-- Unique key for cached download -->
        <_XbdKey_playservicesvisionimagelabel>playservices-15.0.0/playservicesvisionimagelabel</_XbdKey_playservicesvisionimagelabel>
        
        <!-- Path to .aar file within the extracted contents of the cached download -->
        <_XbdAarFile_playservicesvisionimagelabel>m2repository\com\google\android\gms\play-services-vision-image-label\15.0.0\play-services-vision-image-label-15.0.0.aar</_XbdAarFile_playservicesvisionimagelabel>
        
        <!-- Full path to .aar file, assuming we had to download to the cache - we reset this later if it is in the sdk -->
        <_XbdAarFileFullPath_playservicesvisionimagelabel>$(XamarinBuildDownloadDir)$(_XbdKey_playservicesvisionimagelabel)\play-services-vision-image-label-15.0.0.aar</_XbdAarFileFullPath_playservicesvisionimagelabel>

        <!-- Assembly name to embed .aar in -->
        <_XbdAssemblyName_playservicesvisionimagelabel>Xamarin.GooglePlayServices.Vision.ImageLabel</_XbdAssemblyName_playservicesvisionimagelabel>
    </PropertyGroup>

    <ItemGroup>
        <XamarinBuildRestoreResources Include="_XbdRestoreItems_playservicesvisionimagelabel"/>
    </ItemGroup>

    <Target Name="_XbdRestoreItems_playservicesvisionimagelabel">
        <!-- Check if the aar file is in the android sdk already and change the path to use to it, if it's found -->
        <CreateProperty Value="$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_playservicesvisionimagelabel)" Condition="Exists('$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_playservicesvisionimagelabel)')">
            <Output PropertyName="_XbdAarFileFullPath_playservicesvisionimagelabel" TaskParameter="Value" />
        </CreateProperty>

        <ItemGroup>
            <XamarinBuildDownload Include="$(_XbdKey_playservicesvisionimagelabel)">
                <Url>https://dl.google.com/dl/android/maven2/com/google/android/gms/play-services-vision-image-label/15.0.0/play-services-vision-image-label-15.0.0.aar</Url>
                <ToFile>play-services-vision-image-label-15.0.0.aar</ToFile>
                <Kind>Uncompressed</Kind>
                <Md5>80fc1bc4ae71541d28cbf9be3005c35f</Md5>
            </XamarinBuildDownload>
        </ItemGroup>

        <ItemGroup>
            <XamarinBuildDownloadRestoreAssemblyAar Include="$(_XbdAarFileFullPath_playservicesvisionimagelabel)">
                <LogicalName>__AndroidLibraryProjects__.zip</LogicalName>
                <AssemblyName>$(_XbdAssemblyName_playservicesvisionimagelabel)</AssemblyName>
            </XamarinBuildDownloadRestoreAssemblyAar>
        </ItemGroup>
    </Target>
</Project>