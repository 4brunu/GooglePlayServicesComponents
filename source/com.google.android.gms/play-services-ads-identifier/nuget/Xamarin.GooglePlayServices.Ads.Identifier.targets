<?xml version="1.0" encoding="UTF-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <!-- Unique key for cached download -->
        <_XbdKey_playservicesadsidentifier>playservices-15.0.1/playservicesadsidentifier</_XbdKey_playservicesadsidentifier>
        
        <!-- Path to .aar file within the extracted contents of the cached download -->
        <_XbdAarFile_playservicesadsidentifier>m2repository\com\google\android\gms\play-services-ads-identifier\15.0.1\play-services-ads-identifier-15.0.1.aar</_XbdAarFile_playservicesadsidentifier>
        
        <!-- Full path to .aar file, assuming we had to download to the cache - we reset this later if it is in the sdk -->
        <_XbdAarFileFullPath_playservicesadsidentifier>$(XamarinBuildDownloadDir)$(_XbdKey_playservicesadsidentifier)\play-services-ads-identifier-15.0.1.aar</_XbdAarFileFullPath_playservicesadsidentifier>

        <!-- Assembly name to embed .aar in -->
        <_XbdAssemblyName_playservicesadsidentifier>Xamarin.GooglePlayServices.Ads.Identifier</_XbdAssemblyName_playservicesadsidentifier>
    </PropertyGroup>

    <ItemGroup>
        <XamarinBuildRestoreResources Include="_XbdRestoreItems_playservicesadsidentifier"/>
    </ItemGroup>

    <Target Name="_XbdRestoreItems_playservicesadsidentifier">
        <!-- Check if the aar file is in the android sdk already and change the path to use to it, if it's found -->
        <CreateProperty Value="$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_playservicesadsidentifier)" Condition="Exists('$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_playservicesadsidentifier)')">
            <Output PropertyName="_XbdAarFileFullPath_playservicesadsidentifier" TaskParameter="Value" />
        </CreateProperty>

        <ItemGroup>
            <XamarinBuildDownload Include="$(_XbdKey_playservicesadsidentifier)">
                <Url>https://dl.google.com/dl/android/maven2/com/google/android/gms/play-services-ads-identifier/15.0.1/play-services-ads-identifier-15.0.1.aar</Url>
                <ToFile>play-services-ads-identifier-15.0.1.aar</ToFile>
                <Kind>Uncompressed</Kind>
                <Md5>a1e882b028e83cf515732c4aec50afee</Md5>
            </XamarinBuildDownload>
        </ItemGroup>

        <ItemGroup>
            <XamarinBuildDownloadRestoreAssemblyAar Include="$(_XbdAarFileFullPath_playservicesadsidentifier)">
                <LogicalName>__AndroidLibraryProjects__.zip</LogicalName>
                <AssemblyName>$(_XbdAssemblyName_playservicesadsidentifier)</AssemblyName>
            </XamarinBuildDownloadRestoreAssemblyAar>
        </ItemGroup>
    </Target>
</Project>