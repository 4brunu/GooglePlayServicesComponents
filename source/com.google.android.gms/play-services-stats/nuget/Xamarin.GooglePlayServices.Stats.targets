<?xml version="1.0" encoding="UTF-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <!-- Unique key for cached download -->
        <_XbdKey_playservicesstats>playservices-15.0.1/playservicesstats</_XbdKey_playservicesstats>
        
        <!-- Path to .aar file within the extracted contents of the cached download -->
        <_XbdAarFile_playservicesstats>m2repository\com\google\android\gms\play-services-stats\15.0.1\play-services-stats-15.0.1.aar</_XbdAarFile_playservicesstats>
        
        <!-- Full path to .aar file, assuming we had to download to the cache - we reset this later if it is in the sdk -->
        <_XbdAarFileFullPath_playservicesstats>$(XamarinBuildDownloadDir)$(_XbdKey_playservicesstats)\play-services-stats-15.0.1.aar</_XbdAarFileFullPath_playservicesstats>

        <!-- Assembly name to embed .aar in -->
        <_XbdAssemblyName_playservicesstats>Xamarin.GooglePlayServices.Stats</_XbdAssemblyName_playservicesstats>
    </PropertyGroup>

    <ItemGroup>
        <XamarinBuildRestoreResources Include="_XbdRestoreItems_playservicesstats"/>
    </ItemGroup>

    <Target Name="_XbdRestoreItems_playservicesstats">
        <!-- Check if the aar file is in the android sdk already and change the path to use to it, if it's found -->
        <CreateProperty Value="$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_playservicesstats)" Condition="Exists('$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_playservicesstats)')">
            <Output PropertyName="_XbdAarFileFullPath_playservicesstats" TaskParameter="Value" />
        </CreateProperty>

        <ItemGroup>
            <XamarinBuildDownload Include="$(_XbdKey_playservicesstats)">
                <Url>https://dl.google.com/dl/android/maven2/com/google/android/gms/play-services-stats/15.0.1/play-services-stats-15.0.1.aar</Url>
                <ToFile>play-services-stats-15.0.1.aar</ToFile>
                <Kind>Uncompressed</Kind>
                <Md5>26d936ea70ff7e52ee991f212c1d7f80</Md5>
            </XamarinBuildDownload>
        </ItemGroup>

        <ItemGroup>
            <XamarinBuildDownloadRestoreAssemblyAar Include="$(_XbdAarFileFullPath_playservicesstats)">
                <LogicalName>__AndroidLibraryProjects__.zip</LogicalName>
                <AssemblyName>$(_XbdAssemblyName_playservicesstats)</AssemblyName>
            </XamarinBuildDownloadRestoreAssemblyAar>
        </ItemGroup>
    </Target>
</Project>