<?xml version="1.0" encoding="UTF-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <!-- Unique key for cached download -->
        <_XbdKey_firebaseauthmodule>firebase-16.0.2/firebaseauthmodule</_XbdKey_firebaseauthmodule>
        
        <!-- Path to .aar file within the extracted contents of the cached download -->
        <_XbdAarFile_firebaseauthmodule>m2repository\com\google\firebase\firebase-auth-module\16.0.2\firebase-auth-module-16.0.2.aar</_XbdAarFile_firebaseauthmodule>
        
        <!-- Full path to .aar file, assuming we had to download to the cache - we reset this later if it is in the sdk -->
        <_XbdAarFileFullPath_firebaseauthmodule>$(XamarinBuildDownloadDir)$(_XbdKey_firebaseauthmodule)\firebase-auth-module-16.0.2.aar</_XbdAarFileFullPath_firebaseauthmodule>

        <!-- Assembly name to embed .aar in -->
        <_XbdAssemblyName_firebaseauthmodule>Xamarin.Firebase.Auth.Common</_XbdAssemblyName_firebaseauthmodule>
    </PropertyGroup>

    <ItemGroup>
        <XamarinBuildRestoreResources Include="_XbdRestoreItems_firebaseauthmodule"/>
    </ItemGroup>

    <Target Name="_XbdRestoreItems_firebaseauthmodule">
        <!-- Check if the aar file is in the android sdk already and change the path to use to it, if it's found -->
        <CreateProperty Value="$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_firebaseauthmodule)" Condition="Exists('$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_firebaseauthmodule)')">
            <Output PropertyName="_XbdAarFileFullPath_firebaseauthmodule" TaskParameter="Value" />
        </CreateProperty>

        <ItemGroup>
            <XamarinBuildDownload Include="$(_XbdKey_firebaseauthmodule)">
                <Url>https://dl.google.com/dl/android/maven2/com/google/firebase/firebase-auth-module/16.0.2/firebase-auth-module-16.0.2.aar</Url>
                <ToFile>firebase-auth-module-16.0.2.aar</ToFile>
                <Kind>Uncompressed</Kind>
                <Md5>6e63e1ad5d2a8cf058fa67611ec444fd</Md5>
            </XamarinBuildDownload>
        </ItemGroup>

        <ItemGroup>
            <XamarinBuildDownloadRestoreAssemblyAar Include="$(_XbdAarFileFullPath_firebaseauthmodule)">
                <LogicalName>__AndroidLibraryProjects__.zip</LogicalName>
                <AssemblyName>$(_XbdAssemblyName_firebaseauthmodule)</AssemblyName>
            </XamarinBuildDownloadRestoreAssemblyAar>
        </ItemGroup>
    </Target>
</Project>