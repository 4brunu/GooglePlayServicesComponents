<?xml version="1.0" encoding="UTF-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <!-- Unique key for cached download -->
        <_XbdKey_firebaseperf>firebase-16.0.0/firebaseperf</_XbdKey_firebaseperf>
        
        <!-- Path to .aar file within the extracted contents of the cached download -->
        <_XbdAarFile_firebaseperf>m2repository\com\google\firebase\firebase-perf\16.0.0\firebase-perf-16.0.0.aar</_XbdAarFile_firebaseperf>
        
        <!-- Full path to .aar file, assuming we had to download to the cache - we reset this later if it is in the sdk -->
        <_XbdAarFileFullPath_firebaseperf>$(XamarinBuildDownloadDir)$(_XbdKey_firebaseperf)\firebase-perf-16.0.0.aar</_XbdAarFileFullPath_firebaseperf>

        <!-- Assembly name to embed .aar in -->
        <_XbdAssemblyName_firebaseperf>Xamarin.Firebase.Perf</_XbdAssemblyName_firebaseperf>
    </PropertyGroup>

    <ItemGroup>
        <XamarinBuildRestoreResources Include="_XbdRestoreItems_firebaseperf"/>
    </ItemGroup>

    <Target Name="_XbdRestoreItems_firebaseperf">
        <!-- Check if the aar file is in the android sdk already and change the path to use to it, if it's found -->
        <CreateProperty Value="$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_firebaseperf)" Condition="Exists('$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_firebaseperf)')">
            <Output PropertyName="_XbdAarFileFullPath_firebaseperf" TaskParameter="Value" />
        </CreateProperty>

        <ItemGroup>
            <XamarinBuildDownload Include="$(_XbdKey_firebaseperf)">
                <Url>https://dl.google.com/dl/android/maven2/com/google/firebase/firebase-perf/16.0.0/firebase-perf-16.0.0.aar</Url>
                <ToFile>firebase-perf-16.0.0.aar</ToFile>
                <Kind>Uncompressed</Kind>
                <Md5>ba226124676477f883ad7c2551d889ed</Md5>
            </XamarinBuildDownload>
        </ItemGroup>

        <ItemGroup>
            <XamarinBuildDownloadRestoreAssemblyAar Include="$(_XbdAarFileFullPath_firebaseperf)">
                <LogicalName>__AndroidLibraryProjects__.zip</LogicalName>
                <AssemblyName>$(_XbdAssemblyName_firebaseperf)</AssemblyName>
            </XamarinBuildDownloadRestoreAssemblyAar>
        </ItemGroup>
    </Target>
</Project>