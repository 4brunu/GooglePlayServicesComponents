<?xml version="1.0" encoding="UTF-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <!-- Unique key for cached download -->
        <_XbdKey_firebaseauthinterop>firebase-16.0.0/firebaseauthinterop</_XbdKey_firebaseauthinterop>
        
        <!-- Path to .aar file within the extracted contents of the cached download -->
        <_XbdAarFile_firebaseauthinterop>m2repository\com\google\firebase\firebase-auth-interop\16.0.0\firebase-auth-interop-16.0.0.aar</_XbdAarFile_firebaseauthinterop>
        
        <!-- Full path to .aar file, assuming we had to download to the cache - we reset this later if it is in the sdk -->
        <_XbdAarFileFullPath_firebaseauthinterop>$(XamarinBuildDownloadDir)$(_XbdKey_firebaseauthinterop)\firebase-auth-interop-16.0.0.aar</_XbdAarFileFullPath_firebaseauthinterop>

        <!-- Assembly name to embed .aar in -->
        <_XbdAssemblyName_firebaseauthinterop>Xamarin.Firebase.Auth.Interop</_XbdAssemblyName_firebaseauthinterop>
    </PropertyGroup>

    <ItemGroup>
        <XamarinBuildRestoreResources Include="_XbdRestoreItems_firebaseauthinterop"/>
    </ItemGroup>

    <Target Name="_XbdRestoreItems_firebaseauthinterop">
        <!-- Check if the aar file is in the android sdk already and change the path to use to it, if it's found -->
        <CreateProperty Value="$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_firebaseauthinterop)" Condition="Exists('$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_firebaseauthinterop)')">
            <Output PropertyName="_XbdAarFileFullPath_firebaseauthinterop" TaskParameter="Value" />
        </CreateProperty>

        <ItemGroup>
            <XamarinBuildDownload Include="$(_XbdKey_firebaseauthinterop)">
                <Url>https://dl.google.com/dl/android/maven2/com/google/firebase/firebase-auth-interop/16.0.0/firebase-auth-interop-16.0.0.aar</Url>
                <ToFile>firebase-auth-interop-16.0.0.aar</ToFile>
                <Kind>Uncompressed</Kind>
                <Md5>cd55f61fe0a7affa002a88fb81983249</Md5>
            </XamarinBuildDownload>
        </ItemGroup>

        <ItemGroup>
            <XamarinBuildDownloadRestoreAssemblyAar Include="$(_XbdAarFileFullPath_firebaseauthinterop)">
                <LogicalName>__AndroidLibraryProjects__.zip</LogicalName>
                <AssemblyName>$(_XbdAssemblyName_firebaseauthinterop)</AssemblyName>
            </XamarinBuildDownloadRestoreAssemblyAar>
        </ItemGroup>
    </Target>
</Project>