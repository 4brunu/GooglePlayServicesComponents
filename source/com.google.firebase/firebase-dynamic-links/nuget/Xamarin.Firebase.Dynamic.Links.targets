<?xml version="1.0" encoding="UTF-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <!-- Unique key for cached download -->
        <_XbdKey_firebasedynamiclinks>firebase-16.0.1/firebasedynamiclinks</_XbdKey_firebasedynamiclinks>
        
        <!-- Path to .aar file within the extracted contents of the cached download -->
        <_XbdAarFile_firebasedynamiclinks>m2repository\com\google\firebase\firebase-dynamic-links\16.0.1\firebase-dynamic-links-16.0.1.aar</_XbdAarFile_firebasedynamiclinks>
        
        <!-- Full path to .aar file, assuming we had to download to the cache - we reset this later if it is in the sdk -->
        <_XbdAarFileFullPath_firebasedynamiclinks>$(XamarinBuildDownloadDir)$(_XbdKey_firebasedynamiclinks)\firebase-dynamic-links-16.0.1.aar</_XbdAarFileFullPath_firebasedynamiclinks>

        <!-- Assembly name to embed .aar in -->
        <_XbdAssemblyName_firebasedynamiclinks>Xamarin.Firebase.Dynamic.Links</_XbdAssemblyName_firebasedynamiclinks>
    </PropertyGroup>

    <ItemGroup>
        <XamarinBuildRestoreResources Include="_XbdRestoreItems_firebasedynamiclinks"/>
    </ItemGroup>

    <Target Name="_XbdRestoreItems_firebasedynamiclinks">
        <!-- Check if the aar file is in the android sdk already and change the path to use to it, if it's found -->
        <CreateProperty Value="$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_firebasedynamiclinks)" Condition="Exists('$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_firebasedynamiclinks)')">
            <Output PropertyName="_XbdAarFileFullPath_firebasedynamiclinks" TaskParameter="Value" />
        </CreateProperty>

        <ItemGroup>
            <XamarinBuildDownload Include="$(_XbdKey_firebasedynamiclinks)">
                <Url>https://dl.google.com/dl/android/maven2/com/google/firebase/firebase-dynamic-links/16.0.1/firebase-dynamic-links-16.0.1.aar</Url>
                <ToFile>firebase-dynamic-links-16.0.1.aar</ToFile>
                <Kind>Uncompressed</Kind>
                <Md5>a593e728d60d50ef17b44153e47cfa79</Md5>
            </XamarinBuildDownload>
        </ItemGroup>

        <ItemGroup>
            <XamarinBuildDownloadRestoreAssemblyAar Include="$(_XbdAarFileFullPath_firebasedynamiclinks)">
                <LogicalName>__AndroidLibraryProjects__.zip</LogicalName>
                <AssemblyName>$(_XbdAssemblyName_firebasedynamiclinks)</AssemblyName>
            </XamarinBuildDownloadRestoreAssemblyAar>
        </ItemGroup>
    </Target>
</Project>