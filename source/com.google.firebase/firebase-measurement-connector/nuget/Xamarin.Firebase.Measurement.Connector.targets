<?xml version="1.0" encoding="UTF-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <!-- Unique key for cached download -->
        <_XbdKey_firebasemeasurementconnector>firebase-17.0.0/firebasemeasurementconnector</_XbdKey_firebasemeasurementconnector>
        
        <!-- Path to .aar file within the extracted contents of the cached download -->
        <_XbdAarFile_firebasemeasurementconnector>m2repository\com\google\firebase\firebase-measurement-connector\17.0.0\firebase-measurement-connector-17.0.0.aar</_XbdAarFile_firebasemeasurementconnector>
        
        <!-- Full path to .aar file, assuming we had to download to the cache - we reset this later if it is in the sdk -->
        <_XbdAarFileFullPath_firebasemeasurementconnector>$(XamarinBuildDownloadDir)$(_XbdKey_firebasemeasurementconnector)\firebase-measurement-connector-17.0.0.aar</_XbdAarFileFullPath_firebasemeasurementconnector>

        <!-- Assembly name to embed .aar in -->
        <_XbdAssemblyName_firebasemeasurementconnector>Xamarin.Firebase.Measurement.Connector</_XbdAssemblyName_firebasemeasurementconnector>
    </PropertyGroup>

    <ItemGroup>
        <XamarinBuildRestoreResources Include="_XbdRestoreItems_firebasemeasurementconnector"/>
    </ItemGroup>

    <Target Name="_XbdRestoreItems_firebasemeasurementconnector">
        <!-- Check if the aar file is in the android sdk already and change the path to use to it, if it's found -->
        <CreateProperty Value="$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_firebasemeasurementconnector)" Condition="Exists('$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_firebasemeasurementconnector)')">
            <Output PropertyName="_XbdAarFileFullPath_firebasemeasurementconnector" TaskParameter="Value" />
        </CreateProperty>

        <ItemGroup>
            <XamarinBuildDownload Include="$(_XbdKey_firebasemeasurementconnector)">
                <Url>https://dl.google.com/dl/android/maven2/com/google/firebase/firebase-measurement-connector/17.0.0/firebase-measurement-connector-17.0.0.aar</Url>
                <ToFile>firebase-measurement-connector-17.0.0.aar</ToFile>
                <Kind>Uncompressed</Kind>
                <Md5>cdfabc70f4cf5ba9adadccd44d90ea87</Md5>
            </XamarinBuildDownload>
        </ItemGroup>

        <ItemGroup>
            <XamarinBuildDownloadRestoreAssemblyAar Include="$(_XbdAarFileFullPath_firebasemeasurementconnector)">
                <LogicalName>__AndroidLibraryProjects__.zip</LogicalName>
                <AssemblyName>$(_XbdAssemblyName_firebasemeasurementconnector)</AssemblyName>
            </XamarinBuildDownloadRestoreAssemblyAar>
        </ItemGroup>
    </Target>
</Project>