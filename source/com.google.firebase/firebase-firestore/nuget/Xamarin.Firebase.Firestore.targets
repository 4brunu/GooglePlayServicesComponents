<?xml version="1.0" encoding="UTF-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <!-- Unique key for cached download -->
        <_XbdKey_firebasefirestore>firebase-17.0.2/firebasefirestore</_XbdKey_firebasefirestore>
        
        <!-- Path to .aar file within the extracted contents of the cached download -->
        <_XbdAarFile_firebasefirestore>m2repository\com\google\firebase\firebase-firestore\17.0.2\firebase-firestore-17.0.2.aar</_XbdAarFile_firebasefirestore>
        
        <!-- Full path to .aar file, assuming we had to download to the cache - we reset this later if it is in the sdk -->
        <_XbdAarFileFullPath_firebasefirestore>$(XamarinBuildDownloadDir)$(_XbdKey_firebasefirestore)\firebase-firestore-17.0.2.aar</_XbdAarFileFullPath_firebasefirestore>

        <!-- Assembly name to embed .aar in -->
        <_XbdAssemblyName_firebasefirestore>Xamarin.Firebase.Firestore</_XbdAssemblyName_firebasefirestore>
    </PropertyGroup>

    <ItemGroup>
        <XamarinBuildRestoreResources Include="_XbdRestoreItems_firebasefirestore"/>
    </ItemGroup>

    <Target Name="_XbdRestoreItems_firebasefirestore">
        <!-- Check if the aar file is in the android sdk already and change the path to use to it, if it's found -->
        <CreateProperty Value="$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_firebasefirestore)" Condition="Exists('$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_firebasefirestore)')">
            <Output PropertyName="_XbdAarFileFullPath_firebasefirestore" TaskParameter="Value" />
        </CreateProperty>

        <ItemGroup>
            <XamarinBuildDownload Include="$(_XbdKey_firebasefirestore)">
                <Url>https://dl.google.com/dl/android/maven2/com/google/firebase/firebase-firestore/17.0.2/firebase-firestore-17.0.2.aar</Url>
                <ToFile>firebase-firestore-17.0.2.aar</ToFile>
                <Kind>Uncompressed</Kind>
                <Md5>2534fbb7fc515bf7e0bf39e63e596266</Md5>
            </XamarinBuildDownload>
        </ItemGroup>

        <ItemGroup>
            <XamarinBuildDownloadRestoreAssemblyAar Include="$(_XbdAarFileFullPath_firebasefirestore)">
                <LogicalName>__AndroidLibraryProjects__.zip</LogicalName>
                <AssemblyName>$(_XbdAssemblyName_firebasefirestore)</AssemblyName>
            </XamarinBuildDownloadRestoreAssemblyAar>
        </ItemGroup>
    </Target>
</Project>