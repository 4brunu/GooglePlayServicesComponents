<?xml version="1.0" encoding="UTF-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <!-- Unique key for cached download -->
        <_XbdKey_protolitewellknowntypes>playservices-15.0.0/protolitewellknowntypes</_XbdKey_protolitewellknowntypes>
        
        <!-- Path to .aar file within the extracted contents of the cached download -->
        <_XbdAarFile_protolitewellknowntypes>m2repository\com\google\firebase\protolite-well-known-types\15.0.0\protolite-well-known-types-15.0.0.aar</_XbdAarFile_protolitewellknowntypes>
        
        <!-- Full path to .aar file, assuming we had to download to the cache - we reset this later if it is in the sdk -->
        <_XbdAarFileFullPath_protolitewellknowntypes>$(XamarinBuildDownloadDir)$(_XbdKey_protolitewellknowntypes)\protolite-well-known-types-15.0.0.aar</_XbdAarFileFullPath_protolitewellknowntypes>

        <!-- Assembly name to embed .aar in -->
        <_XbdAssemblyName_protolitewellknowntypes>Xamarin.Firebase.ProtoliteWellKnownTypes</_XbdAssemblyName_protolitewellknowntypes>
    </PropertyGroup>

    <ItemGroup>
        <XamarinBuildRestoreResources Include="_XbdRestoreItems_protolitewellknowntypes"/>
    </ItemGroup>

    <Target Name="_XbdRestoreItems_protolitewellknowntypes">
        <!-- Check if the aar file is in the android sdk already and change the path to use to it, if it's found -->
        <CreateProperty Value="$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_protolitewellknowntypes)" Condition="Exists('$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_protolitewellknowntypes)')">
            <Output PropertyName="_XbdAarFileFullPath_protolitewellknowntypes" TaskParameter="Value" />
        </CreateProperty>

        <ItemGroup>
            <XamarinBuildDownload Include="$(_XbdKey_protolitewellknowntypes)">
                <Url>https://dl.google.com/dl/android/maven2/com/google/firebase/protolite-well-known-types/15.0.0/protolite-well-known-types-15.0.0.aar</Url>
                <ToFile>protolite-well-known-types-15.0.0.aar</ToFile>
                <Kind>Uncompressed</Kind>
                <Md5>e9d420274c43312af5d323472d3c9087</Md5>
            </XamarinBuildDownload>
        </ItemGroup>

        <ItemGroup>
            <XamarinBuildDownloadRestoreAssemblyAar Include="$(_XbdAarFileFullPath_protolitewellknowntypes)">
                <LogicalName>__AndroidLibraryProjects__.zip</LogicalName>
                <AssemblyName>$(_XbdAssemblyName_protolitewellknowntypes)</AssemblyName>
            </XamarinBuildDownloadRestoreAssemblyAar>
        </ItemGroup>
    </Target>
</Project>