<?xml version="1.0" encoding="UTF-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <!-- Unique key for cached download -->
        <_XbdKey_firebaseabt>firebase-16.0.0/firebaseabt</_XbdKey_firebaseabt>
        
        <!-- Path to .aar file within the extracted contents of the cached download -->
        <_XbdAarFile_firebaseabt>m2repository\com\google\firebase\firebase-abt\16.0.0\firebase-abt-16.0.0.aar</_XbdAarFile_firebaseabt>
        
        <!-- Full path to .aar file, assuming we had to download to the cache - we reset this later if it is in the sdk -->
        <_XbdAarFileFullPath_firebaseabt>$(XamarinBuildDownloadDir)$(_XbdKey_firebaseabt)\firebase-abt-16.0.0.aar</_XbdAarFileFullPath_firebaseabt>

        <!-- Assembly name to embed .aar in -->
        <_XbdAssemblyName_firebaseabt>Xamarin.Firebase.Abt</_XbdAssemblyName_firebaseabt>
    </PropertyGroup>

    <ItemGroup>
        <XamarinBuildRestoreResources Include="_XbdRestoreItems_firebaseabt"/>
    </ItemGroup>

    <Target Name="_XbdRestoreItems_firebaseabt">
        <!-- Check if the aar file is in the android sdk already and change the path to use to it, if it's found -->
        <CreateProperty Value="$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_firebaseabt)" Condition="Exists('$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_firebaseabt)')">
            <Output PropertyName="_XbdAarFileFullPath_firebaseabt" TaskParameter="Value" />
        </CreateProperty>

        <ItemGroup>
            <XamarinBuildDownload Include="$(_XbdKey_firebaseabt)">
                <Url>https://dl.google.com/dl/android/maven2/com/google/firebase/firebase-abt/16.0.0/firebase-abt-16.0.0.aar</Url>
                <ToFile>firebase-abt-16.0.0.aar</ToFile>
                <Kind>Uncompressed</Kind>
                <Md5>0275d07b689f78f4c12f8d2975c00f80</Md5>
            </XamarinBuildDownload>
        </ItemGroup>

        <ItemGroup>
            <XamarinBuildDownloadRestoreAssemblyAar Include="$(_XbdAarFileFullPath_firebaseabt)">
                <LogicalName>__AndroidLibraryProjects__.zip</LogicalName>
                <AssemblyName>$(_XbdAssemblyName_firebaseabt)</AssemblyName>
            </XamarinBuildDownloadRestoreAssemblyAar>
        </ItemGroup>
    </Target>
</Project>