<?xml version="1.0" encoding="UTF-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <!-- Unique key for cached download -->
        <_XbdKey_firebaseauthcommon>firebase-16.0.2/firebaseauthcommon</_XbdKey_firebaseauthcommon>
        
        <!-- Path to .aar file within the extracted contents of the cached download -->
        <_XbdAarFile_firebaseauthcommon>m2repository\com\google\firebase\firebase-auth-common\16.0.2\firebase-auth-common-16.0.2.aar</_XbdAarFile_firebaseauthcommon>
        
        <!-- Full path to .aar file, assuming we had to download to the cache - we reset this later if it is in the sdk -->
        <_XbdAarFileFullPath_firebaseauthcommon>$(XamarinBuildDownloadDir)$(_XbdKey_firebaseauthcommon)\firebase-auth-common-16.0.2.aar</_XbdAarFileFullPath_firebaseauthcommon>

        <!-- Assembly name to embed .aar in -->
        <_XbdAssemblyName_firebaseauthcommon>Xamarin.Firebase.Auth.Common</_XbdAssemblyName_firebaseauthcommon>
    </PropertyGroup>

    <ItemGroup>
        <XamarinBuildRestoreResources Include="_XbdRestoreItems_firebaseauthcommon"/>
    </ItemGroup>

    <Target Name="_XbdRestoreItems_firebaseauthcommon">
        <!-- Check if the aar file is in the android sdk already and change the path to use to it, if it's found -->
        <CreateProperty Value="$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_firebaseauthcommon)" Condition="Exists('$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_firebaseauthcommon)')">
            <Output PropertyName="_XbdAarFileFullPath_firebaseauthcommon" TaskParameter="Value" />
        </CreateProperty>

        <ItemGroup>
            <XamarinBuildDownload Include="$(_XbdKey_firebaseauthcommon)">
                <Url>https://dl.google.com/dl/android/maven2/com/google/firebase/firebase-auth-common/16.0.2/firebase-auth-common-16.0.2.aar</Url>
                <ToFile>firebase-auth-common-16.0.2.aar</ToFile>
                <Kind>Uncompressed</Kind>
                <Md5>6e63e1ad5d2a8cf058fa67611ec444fd</Md5>
            </XamarinBuildDownload>
        </ItemGroup>

        <ItemGroup>
            <XamarinBuildDownloadRestoreAssemblyAar Include="$(_XbdAarFileFullPath_firebaseauthcommon)">
                <LogicalName>__AndroidLibraryProjects__.zip</LogicalName>
                <AssemblyName>$(_XbdAssemblyName_firebaseauthcommon)</AssemblyName>
            </XamarinBuildDownloadRestoreAssemblyAar>
        </ItemGroup>
    </Target>
</Project>