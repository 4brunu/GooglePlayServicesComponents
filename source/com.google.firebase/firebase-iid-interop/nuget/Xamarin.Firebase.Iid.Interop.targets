<?xml version="1.0" encoding="UTF-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <!-- Unique key for cached download -->
        <_XbdKey_firebaseiidinterop>firebase-16.0.0/firebaseiidinterop</_XbdKey_firebaseiidinterop>
        
        <!-- Path to .aar file within the extracted contents of the cached download -->
        <_XbdAarFile_firebaseiidinterop>m2repository\com\google\firebase\firebase-iid-interop\16.0.0\firebase-iid-interop-16.0.0.aar</_XbdAarFile_firebaseiidinterop>
        
        <!-- Full path to .aar file, assuming we had to download to the cache - we reset this later if it is in the sdk -->
        <_XbdAarFileFullPath_firebaseiidinterop>$(XamarinBuildDownloadDir)$(_XbdKey_firebaseiidinterop)\firebase-iid-interop-16.0.0.aar</_XbdAarFileFullPath_firebaseiidinterop>

        <!-- Assembly name to embed .aar in -->
        <_XbdAssemblyName_firebaseiidinterop>Xamarin.Firebase.Iid.Interop</_XbdAssemblyName_firebaseiidinterop>
    </PropertyGroup>

    <ItemGroup>
        <XamarinBuildRestoreResources Include="_XbdRestoreItems_firebaseiidinterop"/>
    </ItemGroup>

    <Target Name="_XbdRestoreItems_firebaseiidinterop">
        <!-- Check if the aar file is in the android sdk already and change the path to use to it, if it's found -->
        <CreateProperty Value="$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_firebaseiidinterop)" Condition="Exists('$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_firebaseiidinterop)')">
            <Output PropertyName="_XbdAarFileFullPath_firebaseiidinterop" TaskParameter="Value" />
        </CreateProperty>

        <ItemGroup>
            <XamarinBuildDownload Include="$(_XbdKey_firebaseiidinterop)">
                <Url>https://dl.google.com/dl/android/maven2/com/google/firebase/firebase-iid-interop/16.0.0/firebase-iid-interop-16.0.0.aar</Url>
                <ToFile>firebase-iid-interop-16.0.0.aar</ToFile>
                <Kind>Uncompressed</Kind>
                <Md5>4a3d22e916d4b247440fb2ca9df17049</Md5>
            </XamarinBuildDownload>
        </ItemGroup>

        <ItemGroup>
            <XamarinBuildDownloadRestoreAssemblyAar Include="$(_XbdAarFileFullPath_firebaseiidinterop)">
                <LogicalName>__AndroidLibraryProjects__.zip</LogicalName>
                <AssemblyName>$(_XbdAssemblyName_firebaseiidinterop)</AssemblyName>
            </XamarinBuildDownloadRestoreAssemblyAar>
        </ItemGroup>
    </Target>
</Project>