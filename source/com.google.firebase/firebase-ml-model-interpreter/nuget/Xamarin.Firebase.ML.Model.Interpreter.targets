<?xml version="1.0" encoding="UTF-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <!-- Unique key for cached download -->
        <_XbdKey_firebasemlmodelinterpreter>firebase-16.0.0/firebasemlmodelinterpreter</_XbdKey_firebasemlmodelinterpreter>
        
        <!-- Path to .aar file within the extracted contents of the cached download -->
        <_XbdAarFile_firebasemlmodelinterpreter>m2repository\com\google\firebase\firebase-ml-model-interpreter\16.0.0\firebase-ml-model-interpreter-16.0.0.aar</_XbdAarFile_firebasemlmodelinterpreter>
        
        <!-- Full path to .aar file, assuming we had to download to the cache - we reset this later if it is in the sdk -->
        <_XbdAarFileFullPath_firebasemlmodelinterpreter>$(XamarinBuildDownloadDir)$(_XbdKey_firebasemlmodelinterpreter)\firebase-ml-model-interpreter-16.0.0.aar</_XbdAarFileFullPath_firebasemlmodelinterpreter>

        <!-- Assembly name to embed .aar in -->
        <_XbdAssemblyName_firebasemlmodelinterpreter>Xamarin.Firebase.ML.Model.Interpreter</_XbdAssemblyName_firebasemlmodelinterpreter>
    </PropertyGroup>

    <ItemGroup>
        <XamarinBuildRestoreResources Include="_XbdRestoreItems_firebasemlmodelinterpreter"/>
    </ItemGroup>

    <Target Name="_XbdRestoreItems_firebasemlmodelinterpreter">
        <!-- Check if the aar file is in the android sdk already and change the path to use to it, if it's found -->
        <CreateProperty Value="$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_firebasemlmodelinterpreter)" Condition="Exists('$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_firebasemlmodelinterpreter)')">
            <Output PropertyName="_XbdAarFileFullPath_firebasemlmodelinterpreter" TaskParameter="Value" />
        </CreateProperty>

        <ItemGroup>
            <XamarinBuildDownload Include="$(_XbdKey_firebasemlmodelinterpreter)">
                <Url>https://dl.google.com/dl/android/maven2/com/google/firebase/firebase-ml-model-interpreter/16.0.0/firebase-ml-model-interpreter-16.0.0.aar</Url>
                <ToFile>firebase-ml-model-interpreter-16.0.0.aar</ToFile>
                <Kind>Uncompressed</Kind>
                <Md5>7e74f9182c152083487cb14a885d61e5</Md5>
            </XamarinBuildDownload>
        </ItemGroup>

        <ItemGroup>
            <XamarinBuildDownloadRestoreAssemblyAar Include="$(_XbdAarFileFullPath_firebasemlmodelinterpreter)">
                <LogicalName>__AndroidLibraryProjects__.zip</LogicalName>
                <AssemblyName>$(_XbdAssemblyName_firebasemlmodelinterpreter)</AssemblyName>
            </XamarinBuildDownloadRestoreAssemblyAar>
        </ItemGroup>
    </Target>
</Project>