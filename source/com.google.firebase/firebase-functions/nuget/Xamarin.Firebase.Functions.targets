<?xml version="1.0" encoding="UTF-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <PropertyGroup>
        <!-- Unique key for cached download -->
        <_XbdKey_firebasefunctions>firebase-16.0.1/firebasefunctions</_XbdKey_firebasefunctions>
        
        <!-- Path to .aar file within the extracted contents of the cached download -->
        <_XbdAarFile_firebasefunctions>m2repository\com\google\firebase\firebase-functions\16.0.1\firebase-functions-16.0.1.aar</_XbdAarFile_firebasefunctions>
        
        <!-- Full path to .aar file, assuming we had to download to the cache - we reset this later if it is in the sdk -->
        <_XbdAarFileFullPath_firebasefunctions>$(XamarinBuildDownloadDir)$(_XbdKey_firebasefunctions)\firebase-functions-16.0.1.aar</_XbdAarFileFullPath_firebasefunctions>

        <!-- Assembly name to embed .aar in -->
        <_XbdAssemblyName_firebasefunctions>Xamarin.Firebase.Functions</_XbdAssemblyName_firebasefunctions>
    </PropertyGroup>

    <ItemGroup>
        <XamarinBuildRestoreResources Include="_XbdRestoreItems_firebasefunctions"/>
    </ItemGroup>

    <Target Name="_XbdRestoreItems_firebasefunctions">
        <!-- Check if the aar file is in the android sdk already and change the path to use to it, if it's found -->
        <CreateProperty Value="$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_firebasefunctions)" Condition="Exists('$(AndroidSdkDirectory)\extras\google\$(_XbdAarFile_firebasefunctions)')">
            <Output PropertyName="_XbdAarFileFullPath_firebasefunctions" TaskParameter="Value" />
        </CreateProperty>

        <ItemGroup>
            <XamarinBuildDownload Include="$(_XbdKey_firebasefunctions)">
                <Url>https://dl.google.com/dl/android/maven2/com/google/firebase/firebase-functions/16.0.1/firebase-functions-16.0.1.aar</Url>
                <ToFile>firebase-functions-16.0.1.aar</ToFile>
                <Kind>Uncompressed</Kind>
                <Md5>c6c32177e0ba684fce46d38eba46c1ce</Md5>
            </XamarinBuildDownload>
        </ItemGroup>

        <ItemGroup>
            <XamarinBuildDownloadRestoreAssemblyAar Include="$(_XbdAarFileFullPath_firebasefunctions)">
                <LogicalName>__AndroidLibraryProjects__.zip</LogicalName>
                <AssemblyName>$(_XbdAssemblyName_firebasefunctions)</AssemblyName>
            </XamarinBuildDownloadRestoreAssemblyAar>
        </ItemGroup>
    </Target>
</Project>